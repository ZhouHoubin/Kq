<?xml version="1.0" encoding="UTF-8"?>
<project name="module_kq" default="compile.module.kq">
  <dirname property="module.kq.basedir" file="${ant.file.module_kq}"/>
  
  <property name="module.jdk.home.kq" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.kq" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.kq" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.kq" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="kq.output.dir" value="${module.kq.basedir}/out/production/Kq"/>
  <property name="kq.testoutput.dir" value="${module.kq.basedir}/out/test/Kq"/>
  
  <path id="kq.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="kq.module.production.classpath">
    <path refid="${module.jdk.classpath.kq}"/>
    <path refid="library.org.java-websocket:java-websocket:1.3.9.classpath"/>
    <path refid="library.org.json:json:20140107.classpath"/>
  </path>
  
  <path id="kq.runtime.production.module.classpath">
    <pathelement location="${kq.output.dir}"/>
    <path refid="library.org.java-websocket:java-websocket:1.3.9.classpath"/>
    <path refid="library.org.json:json:20140107.classpath"/>
  </path>
  
  <path id="kq.module.classpath">
    <path refid="${module.jdk.classpath.kq}"/>
    <pathelement location="${kq.output.dir}"/>
    <path refid="library.org.java-websocket:java-websocket:1.3.9.classpath"/>
    <path refid="library.org.json:json:20140107.classpath"/>
  </path>
  
  <path id="kq.runtime.module.classpath">
    <pathelement location="${kq.testoutput.dir}"/>
    <pathelement location="${kq.output.dir}"/>
    <path refid="library.org.java-websocket:java-websocket:1.3.9.classpath"/>
    <path refid="library.org.json:json:20140107.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.kq">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.kq">
    <patternset refid="excluded.from.module.kq"/>
  </patternset>
  
  <path id="kq.module.sourcepath">
    <dirset dir="${module.kq.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.kq" depends="compile.module.kq.production,compile.module.kq.tests" description="Compile module Kq"/>
  
  <target name="compile.module.kq.production" depends="register.custom.compilers" description="Compile module Kq; production classes">
    <mkdir dir="${kq.output.dir}"/>
    <javac2 destdir="${kq.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.kq}/javac">
      <compilerarg line="${compiler.args.kq}"/>
      <bootclasspath refid="kq.module.bootclasspath"/>
      <classpath refid="kq.module.production.classpath"/>
      <src refid="kq.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.kq"/>
    </javac2>
    
    <copy todir="${kq.output.dir}">
      <fileset dir="${module.kq.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.kq.tests" depends="register.custom.compilers,compile.module.kq.production" description="compile module Kq; test classes" unless="skip.tests"/>
  
  <target name="clean.module.kq" description="cleanup module">
    <delete dir="${kq.output.dir}"/>
    <delete dir="${kq.testoutput.dir}"/>
  </target>
</project>